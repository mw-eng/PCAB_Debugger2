<UserControl x:Class="PCAB_Debugger2_GUI.Ports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCAB_Debugger2_GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            
        </Grid>
        <Viewbox Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <local:Port Grid.Row="0" Grid.Column="0" x:Name="Port1" PortNumber="0" BackgroundBrush="#7F00FF00"/>
                <local:Port Grid.Row="0" Grid.Column="1" x:Name="Port2" PortNumber="1"/>
                <local:Port Grid.Row="0" Grid.Column="2" x:Name="Port3" PortNumber="2"/>
                <local:Port Grid.Row="0" Grid.Column="3" x:Name="Port4" PortNumber="3"/>
                <local:Port Grid.Row="1" Grid.Column="0" x:Name="Port5" PortNumber="4"/>
                <local:Port Grid.Row="1" Grid.Column="1" x:Name="Port6" PortNumber="5"/>
                <local:Port Grid.Row="1" Grid.Column="2" x:Name="Port7" PortNumber="6"/>
                <local:Port Grid.Row="1" Grid.Column="3" x:Name="Port8" PortNumber="7"/>
                <local:Port Grid.Row="2" Grid.Column="0" x:Name="Port9" PortNumber="8"/>
                <local:Port Grid.Row="2" Grid.Column="1" x:Name="Port10" PortNumber="9"/>
                <local:Port Grid.Row="2" Grid.Column="2" x:Name="Port11" PortNumber="10"/>
                <local:Port Grid.Row="2" Grid.Column="3" x:Name="Port12" PortNumber="11"/>
                <local:Port Grid.Row="3" Grid.Column="0" x:Name="Port13" PortNumber="12"/>
                <local:Port Grid.Row="3" Grid.Column="1" x:Name="Port14" PortNumber="13"/>
                <local:Port Grid.Row="3" Grid.Column="2" x:Name="Port15" PortNumber="14"/>
                <Grid Grid.Row="3" Grid.Column="3" x:Name="Port16" Background="Yellow">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Port0"/>
                    <ComboBox Grid.Row="1" Margin="5"/>
                    <CheckBox Grid.Row="2" Margin="5" Content="Standby LNA"/>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
